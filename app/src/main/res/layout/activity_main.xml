<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dwarakv.magicmirror.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:weightSum="1"
        android:layout_marginTop="@dimen/abc_action_bar_default_height_material">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Hello "
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.03"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Welcome to Thoughtworks Store"
            android:id="@+id/welcomeView"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.03"
            android:layout_marginTop="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:textStyle="bold" />

        <Button
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:id="@+id/logout_button"
            android:layout_weight="0.03"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/abc_action_bar_default_height_material"
            android:textSize="@dimen/com_facebook_share_button_text_size"
            android:textStyle="normal" />
    </LinearLayout>
</RelativeLayout>
